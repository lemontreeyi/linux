# ranger file manager
bindsym $alt+f exec --no-startup-id $terminal -e ra

# htop
#bindsym ctrl+Shift+Escape exec $terminal -e htop

# terminator
bindsym $alt+t exec --no-startup-id terminator

# chrome
bindsym $alt+c exec --no-startup-id google-chrome-stable

#clion
bindsym $alt+l exec --no-startup-id /home/lemon/clion-2021.2.2/bin/clion.sh  

#vs-code
bindsym $alt+v exec --no-startup-id code

# enable nsfw mode
bindsym ctrl+$mod+n exec --no-startup-id "~/.nsfw.sh &"

# enable sfw mode
bindsym ctrl+$mod+s exec --no-startup-id "~/.sfw.sh &"

#flameshot
